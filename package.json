{
  "name": "liveviewjs-hackernews",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./build/index.js",
    "dev": "ts-node ./src/hn/autorun.ts",
    "debug": "ts-node ./src/firebase.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "esbuild ./src/client/index.ts --bundle --outdir=public/js --platform=browser --format=esm --minify --sourcemap",
    "build:server": "esbuild ./src/hn/index.ts --bundle --outdir=build --platform=node --format=cjs --minify --sourcemap",
    "clean": "rm -rf build; rm -rf dist"
  },
  "dependencies": {
    "@liveviewjs/express": "^0.7.5",
    "express": "^4.17.2",
    "express-session": "^1.17.2",
    "firebase": "^9.11.0",
    "jsonwebtoken": "^8.5.1",
    "liveviewjs": "^0.7.5",
    "nanoid": "^3.2.0",
    "node-fetch": "^2.6.7",
    "topbar": "^1.0.1",
    "ws": "^8.8.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^18.7.8",
    "@types/node-fetch": "^2.6.2",
    "@types/phoenix": "^1.5.4",
    "@types/phoenix_live_view": "^0.15.1",
    "@types/ws": "^8.5.3",
    "chalk": "^4.1.2",
    "esbuild": "^0.14.53",
    "nodemon": "^2.0.15",
    "phoenix": "^1.6.12",
    "phoenix_html": "^3.2.0",
    "phoenix_live_view": "^0.18.0",
    "rollup": "^2.70.1",
    "rollup-plugin-dts": "^4.2.0",
    "rollup-plugin-typescript2": "^0.31.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.5.4"
  }
}
